block variables
doctype html
// if lt IE 7
  html .no-js.lt-ie9.lt-ie8.lt-ie7
// if IE 7
  html .no-js.lt-ie9.lt-ie8
// if IE 8
  html .no-js.lt-ie9
html.no-js
    head
      meta(charset="utf-8")
      - var title = title || "Benkyou Helper"
      title #{title}
      link(rel="shortcut icon", href="/favicon.ico")
      // build:css styles/vendor.css
      // bower:css
      link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
      // endbower
      // endbuild
      // build:css(.tmp) css/main.css
      link(rel="stylesheet", href="css/main.css")
      link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css")
      link(rel="stylesheet", href="css/font-awesome-animation.min.css")
      // endbuild
      script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/dropbox.js/0.10.2/dropbox.min.js")
  body
    // if lt IE 10
      p.browsehappy
      | You are using an outdated browser. Please
        a(href="http://browsehappy.com/") upgrade your browser
      | to improve your experience.

    // build:js scripts/vendor.js
    // bower:js
    script(type="text/javascript", src="/bower_components/jquery/dist/jquery.js")
    // endbower
    // endbuild

    script(type="text/javascript", src="/bower_components/jade/jade.js")

    // build:js scripts/plugins.js
    script(type="text/javascript", src="/bower_components/bootstrap/dist/js/bootstrap.js")
    // endbuild

    // build:js({app,.tmp}) scripts/main.js
    script(type="text/javascript", src="js/main.js")
    // endbuild

    include header

    .container
      .row
        block content
        .push-down-footer

    include footer

    block scripts
